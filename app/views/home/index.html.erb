<container class='col-md-12 col-md-offset-3 text-center' >
  <div class="row">
    <div class='col-md-6' style='font-size: 22px;'>
      <%= link_to(image_tag(@card.image.thumb.url, alt: 'Image'), @card.image.url, target: '_blank') if @card.image? %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class='col-md-6 text-center' style='font-size: 22px;'>
      <%= @card.original_text %>
    </div>
  </div>
  <div class="row">
    <div class='col-md-6 text-center'>
      <%= simple_form_for :home, url: '/check', method: :post  do |f| %>
          <br>
          <%= f.hidden_field :id, value: @card.id %>
          <%= f.input :translated_text, label: t(:enter_translation) %>
          <%= f.button :submit, t(:check_it), class: 'btn btn-danger' %>
          <br><br>
      <% end %>
    </div>
  </div>
</container>
