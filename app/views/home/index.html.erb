<container class='col-md-12 col-md-offset-3 text-center' >
  <div class="row">
    <div class='col-md-6 panel panel-default' style='font-size: 22px;'>
      <%= link_to(image_tag(@card.image.thumb.url, alt: 'Image'), @card.image.url, target: '_blank') if @card.image? %>
    </div>
  </div>
  <div class="row">
    <div class='col-md-6 text-center panel panel-default' style='font-size: 22px;'>
      <%= @card.original_text %>
    </div>
  </div>
  <div class="row">
    <div class='col-md-6 text-center panel panel-default'>
      <%= simple_form_for :home, url: '/check', method: :post  do |f| %>
          <%= f.hidden_field :id, value: @card.id %>
          <%= f.input :translated_text, label: 'Enter the translation' %>
          <%= f.button :submit, 'Check it!' %>
      <% end %>
    </div>
  </div>
</container>
