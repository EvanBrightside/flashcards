<div class='col-md-4 col-md-offset-4 text-center'>
  <h2><%= t('cards.add_a_card') %></h2>

  <%= simple_form_for @card, url: cards_path do |f| %>
    <%= f.input :original_text, label: t('cards.original_text') %>
    <%= f.input :translated_text, label: t('cards.translated_text') %>
    <%= f.association :deck, label: t('decks.choose_a_deck'), include_blank: false %>
    <%= f.input :image, label: t('cards.image'), as: :file%>
    <%= f.hidden_field :image_cache %>
    <%= f.input :remote_image_url, label: t('cards.image_url') %>

    <%= f.button :submit, t('cards.create_card'), class: 'btn btn-success btn-block' %>
  <% end %>

</div>
