<div class='col-md-12 col-sm-offset-2'>
  <h2><%= t('cards.all_cards') %></h2>

  <table>
    <tr>
      <th><%= t('cards.image') %></th>
      <th><%= t('cards.original_text') %></th>
      <th><%= t('cards.translated_text') %></th>
    </tr>

    <% @cards.each do |card| %>
      <tr>
        <td><%= link_to(image_tag(card.image.thumb.url, alt: t('cards.image')), card.image.url, target: '_blank') if card.image? %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime('%d/%m/%Y') %></td>
        <td><%= link_to t('cards.destroy_card'), card_path(card), method: :delete, data: { confirm: t(:are_you_sure) } %></td>
        <td><%= link_to t('cards.edit_card'), edit_card_path(card) %></td>
      </tr>
    <% end %>
  </table>

  <br>

  <%= link_to t(:back_home), root_path, :class => 'btn btn-primary btn-sm' %>
</div>
